#!/usr/bin/bash

# Left click
if [[ "${BLOCK_BUTTON}" -eq 1 ]]; then
	exec octopi &
fi

PACMAN_ICON="ïŠ¬"

PACMAN_COUNT=$(pacman -Qu | wc -l)
YAOURT_COUNT=$(yaourt -Qu --aur | wc -l)

if [[ "${PACMAN_COUNT}" || "${YAOURT_COUNT}" ]]; then
	echo "${PACMAN_ICON}"
	echo ""
fi

# Updates available for pacman
if [[ "${PACMAN_COUNT}" -gt 0 ]]; then
	echo "#F07178\n"
	exit 33
# Updates available for AUR
elif [[ "${YAOURT_COUNT}" -gt 0 ]]; then
	echo "#FFCB6B\n"
# Everything up to date.
elif [[ "${PACMAN_COUNT}" -eq 0 ]]; then
	echo "#C3E88D\n"
fi
